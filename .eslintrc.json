{
  "extends": "eslint:recommended",
  "env": {
      "node": true,
      "es6": true
  },
  "globals": {
      "grammar": true,
      "token": true,
      "prec": true,
      "seq": true,
      "optional": true,
      "choice": true,
      "alias": true,
      "repeat": true,
      "repeat1": true
  },
  "parserOptions": {
      "sourceType": "module"
  },
  "rules": {
    "space-before-function-paren": ["error", {
        "anonymous": "always",
        "named": "never"
    }],
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "semi": [
      "error",
      "never"
    ],
    "keyword-spacing": ["error", {
      "before": true,
      "after": true
    }],
    "space-before-blocks": ["error", "always"],
    "no-unused-vars": ["off"]
  }
}
