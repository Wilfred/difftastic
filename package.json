{
  "name": "tree-sitter-haskell",
  "version": "0.0.2",
  "description": "Haskell grammar for tree-sitter",
  "main": "index.js",
  "keywords": [
    "parser",
    "lexer"
  ],
  "author": "Rick Winfrey",
  "license": "MIT",
  "dependencies": {
    "nan": "^2.4.0"
  },
  "devDependencies": {
    "tree-sitter-cli": "^0.9.0"
  },
  "watch": {
    "test": {
      "patterns": [
        "corpus"
      ],
      "extensions": "txt",
      "quiet": true
    },
    "build-test": {
      "patterns": [
        "./",
        "src"
      ],
      "extensions": "js,cc",
      "quiet": true
    }
  },
  "scripts": {
    "build": "tree-sitter generate && node-gyp build",
    "test": "tree-sitter test",
    "build-test": "tree-sitter generate && node-gyp build && tree-sitter test",
    "watch-test": "npm-watch test",
    "watch-grammar": "npm-watch build-test"
  }
}
