{
  "version": "2.0.0",
  "presentation": {
    "showReuseMessage": false,
    "clear": true,
    "focus": false,
    "reveal": "silent",
  },
  "tasks": [
    {
      "label": "parse-tree",
      "type": "shell",
      "command": "bin/parse --open-in-vscode tree ${file}",
      "problemMatcher": [],
    },
    {
      "label": "parse-hack",
      "type": "shell",
      "command": "bin/parse --open-in-vscode hack ${file}",
      "problemMatcher": [],
    },
    {
      "label": "parse-query",
      "type": "shell",
      "command": "bin/parse --open-in-vscode query ${file}",
      "problemMatcher": [],
    },
    {
      "label": "get-errors",
      "type": "shell",
      "command": "bin/get-errors ${file}",
      "problemMatcher": {
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": "^([^\\s].*)$",
            "file": 1,
          },
          {
            "regexp": "^\\((\\d+),(\\d+)\\)-\\((\\d+),(\\d+)\\) (.*)$",
            "loop": true,
            "line": 1,
            "column": 2,
            "endLine": 3,
            "endColumn": 4,
            "message": 5,
          },
        ],
      },
    },
  ],
}
